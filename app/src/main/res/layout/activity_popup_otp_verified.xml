<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".POP_UP.popup_otp_verified"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cvverified"
                app:cardCornerRadius="25dp"
                android:layout_centerInParent="true"
                >


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/shape_1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Mobile Number Successfully Verified"
                        android:id="@+id/successverified"
                        android:textColor="#090909"
                        android:layout_marginTop="185dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        />

                    <Button
                        android:id="@+id/successverified1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/successverified"
                        android:layout_marginTop="250dp"
                        android:background="@drawable/verified_button"
                        android:text="Done"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="50dp"
                        />




            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>
