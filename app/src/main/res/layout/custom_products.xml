<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_products1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_item_list1">

            <ImageView
                android:id="@+id/custom_img_products"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/hair_cutting_imae"
                android:padding="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/hair_wax" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_img_products"
                android:layout_marginTop="-35dp"
                android:text="Hair Wax"
                android:textAlignment="center"
                android:textColor="#fff" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_products2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_products1"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/custom_img_products2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/perfume_background"
                android:padding="40dp"
                android:src="@drawable/perfume"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_img_products2"
                android:layout_marginTop="-25dp"
                android:text="Perfume"
                android:textColor="#fff"
                android:textAlignment="center"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_products3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_products2"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/custom_img_products3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/face_products_background_"
                android:padding="35dp"
                android:src="@drawable/face_products_" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_img_products3"
                android:layout_marginTop="-30dp"
                android:text="Face Products"
                android:textAlignment="center"
                android:textColor="#FAFAF9"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>