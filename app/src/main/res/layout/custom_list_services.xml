<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1"
        android:layout_marginTop="10dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_products"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/item_"
                    android:padding="10dp"
                    android:id="@+id/ser_img_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Black Wax"
                    android:textColor="#000000"
                    android:layout_below="@id/ser_img_1"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tv_service"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service"
                    android:id="@+id/tv_price"
                    android:text="$ 39.00"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:padding="10dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price"
                    android:text="Buy"
                    android:background="@drawable/service_button"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"

                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-16dp"
            android:background="@drawable/background_products"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ser_img_2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="12dp"
                    android:src="@drawable/item_"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ser_img_2"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="4dp"
                    android:text="Jack Black Wax"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_2"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:text="$ 39.00"
                    android:textColor="#000000"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price2"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/service_button"
                    android:padding="15dp"
                    android:text="Buy"
                    android:textColor="#fff"
                    android:textSize="14sp"

                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/rel2"
        android:layout_below="@id/rel1"
        android:layout_marginTop="15dp"

        >


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_products"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/item_"
                    android:padding="12dp"
                    android:id="@+id/ser_img_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Black Wax"
                    android:textColor="#000000"
                    android:layout_below="@id/ser_img_3"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tv_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_3"
                    android:id="@+id/tv_price3"
                    android:text="$ 39.00"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:padding="10dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price3"
                    android:text="Buy"
                    android:background="@drawable/service_button"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"

                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/background_products"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/item_"
                    android:padding="12dp"
                    android:id="@+id/ser_img_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Black Wax"
                    android:textColor="#000000"
                    android:layout_below="@id/ser_img_4"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tv_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_4"
                    android:id="@+id/tv_price4"
                    android:text="$ 39.00"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:padding="10dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price4"
                    android:text="Buy"
                    android:background="@drawable/service_button"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"

                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>