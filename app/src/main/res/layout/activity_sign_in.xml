<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sign_in.Sign_in">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/backgrond_"
                android:layout_marginTop="-70dp"
                android:layout_gravity="fill_horizontal|fill_vertical"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="-75dp"
                android:src="@drawable/logo2" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlsignin"
        android:layout_marginTop="-170dp"
        android:background="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:id="@+id/cviewsignin"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvsignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="SIGN IN"
                android:textColor="#ECB50F"
                android:layout_marginTop="10dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsignin"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#0F0F0F"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsignin"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableStart="@drawable/mail"
                android:hint="Enter your E-mail"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="35dp"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:background="@drawable/etemail"
                android:padding="8dp"
                />




            <TextView
                android:id="@+id/tvpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etemail"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:text="Password"
                android:textColor="#0F0F0F"
                android:layout_marginTop="10dp"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvpassword"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableStart="@drawable/lock"
                android:hint="Enter Your Password"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:paddingEnd="10dp"
                android:paddingStart="15dp"
                android:padding="8dp"
                android:background="@drawable/etemail"
                android:layout_marginTop="7dp"
                />

            <TextView
                android:id="@+id/tvforgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etpassword"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:text="Forgot Password ?"
                android:textColor="#0A0A0A"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnsignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvforgot"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_sign_in"
                android:text="SIGN IN"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                />

            <RelativeLayout
                android:id="@+id/orloginwith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnsignin"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="#CAC8C8"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Or login with" />

                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="#CAC8C8"
                    android:layout_marginRight="4dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/orloginwith"
                android:layout_marginTop="-6dp"
                android:padding="5dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/facebook_"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/imgfb"/>

                <Button
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgfb"
                    android:background="@drawable/button_fb"
                    android:text="FACEBOOK"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/fb_signin"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="125dp"
                    android:src="@drawable/google_plus"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/google"
                    android:text="GOOGLE PLUS"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cviewsignin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="80dp"
        >

        <TextView
            android:id="@+id/dhaa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:text="Don't have an account? "
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dhaa1"
            android:paddingBottom="10dp"
            android:text="Sign Up"
            android:textColor="#E6BA37"
            android:id="@+id/signintv"
            />


    </RelativeLayout>

    </RelativeLayout>


</ScrollView>