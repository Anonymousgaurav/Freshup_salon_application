<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_save.profile_save">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/profile_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_profile">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow"
                    android:layout_alignParentStart="true"
                    android:padding="15dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/prev_pro"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_1"
                    android:layout_centerInParent="true"
                    android:id="@+id/img_profile"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_pro"
                    android:layout_marginTop="220dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="130dp"
                    />



            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_background"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-70dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <RelativeLayout
                        android:id="@+id/profile_namee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/payment_layout"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Name"
                            android:textColor="#000000" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="#ffffff"
                            android:hint="Upkar Singh"
                            android:textColor="#000000" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/profile_emaill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_namee"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/payment_layout"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Email"
                            android:textColor="#000000" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="#ffffff"
                            android:hint="abc@xyz.com" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/profile_phonee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_emaill"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/payment_layout"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Phone Number"
                            android:textColor="#000000" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="#ffffff"
                            android:hint="9999-8888" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_sign_in"
                        android:layout_below="@id/profile_phonee"
                        android:layout_marginTop="25sp"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/logout_button"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/log_out_pro"
                                android:layout_centerVertical="true"
                                android:id="@+id/logout_img"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOG OUT"
                                android:textSize="15dp"
                                android:textColor="#fff"
                                android:layout_toRightOf="@+id/logout_img"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FDFDFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="4">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_iocn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/promo"
                    android:id="@+id/promo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROMO" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/settings_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SETTING" />

            </LinearLayout>


        </LinearLayout>


    </android.support.design.widget.BottomNavigationView>


</RelativeLayout>


